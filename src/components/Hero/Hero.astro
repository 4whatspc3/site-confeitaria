---
import { Image } from "astro:assets";
import navLogo from "../../assets/astro.svg";
import heroImage from "../../assets/hero-images/kawaii.png";
---

<header
  id="home"
  class="magicpattern bg-cover bg-[#ffebf2] min-h-screen p-4 flex flex-col overflow-hidden gap-[6vh] md:gap-[10vh] md:p-8 xl:gap-[18vh]"
>
  <nav
    class="flex justify-between items-center bg-morning-glory p-2 pr-6 pl-6 rounded-2xl shadow-sm md:bg-transparent md:shadow-none md:p-0 2xl:w-[1440px] 2xl:mx-auto shake-nav"
  >
    <div
      class="md:bg-morning-glory md:p-2 md:pr-4 md:pl-4 md:rounded-2xl md:shadow-sm"
    >
      <Image src={navLogo} alt="logo" class="w-auto h-10" />
    </div>
    <ul
      class="hidden sm:flex text-new-pink font-medium gap-4 md:bg-morning-glory md:p-2 md:pr-4 md:pl-4 md:rounded-2xl md:shadow-sm"
    >
      <li
        class="bg-white rounded-2xl p-2 border-1 border-new-pink hover:bg-new-pink hover:text-white transition-colors duration-500 ease-in-out"
      >
        <a href="/menu"> Menu </a>
      </li>
      <li
        class="bg-white rounded-2xl p-2 border-1 border-new-pink hover:bg-new-pink hover:text-white transition-colors duration-500 ease-in-out"
      >
        <a href="#sobre">Sobre</a>
      </li>
      <li
        class="bg-white rounded-2xl p-2 border-1 border-new-pink hover:bg-new-pink hover:text-white transition-colors duration-500 ease-in-out"
      >
        <a href="#FAQ">FAQ</a>
      </li>
      <li
        class="bg-white rounded-2xl p-2 border-1 border-new-pink hover:bg-new-pink hover:text-white transition-colors duration-500 ease-in-out"
      >
        <a href="#contato">Contato</a>
      </li>
      <li
        class="bg-white rounded-2xl p-2 border-1 border-new-pink hover:bg-new-pink hover:text-white transition-colors duration-500 ease-in-out"
      >
        <a href="/order">Pedido</a>
      </li>
    </ul>
    <div class="relative sm:hidden">
      <details>
        <summary class="cursor-pointer [custom-summary]">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            class="hover:stroke-[#e60073] hover:scale-110 transition-all duration-300 ease-in-out"
          >
            <path d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </summary>
        <ul
          class="absolute bg-morning-glory text-new-pink text-center font-bold rounded-2xl mt-6 p-4 -translate-x-15 flex flex-col gap-2 shadow-sm z-10"
        >
          <li
            class="bg-white rounded-2xl p-2 border-1 border-new-pink hover:bg-new-pink hover:text-white transition-colors duration-500 ease-in-out"
          >
            <a href="/menu"> Menu </a>
          </li>
          <li
            class="bg-white rounded-2xl p-2 border-1 border-new-pink hover:bg-new-pink hover:text-white"
          >
            <a href="#sobre">Sobre</a>
          </li>
          <li
            class="bg-white rounded-2xl p-2 border-1 border-new-pink hover:bg-new-pink hover:text-white"
          >
            <a href="#FAQ">FAQ</a>
          </li>
          <li
            class="bg-white rounded-2xl p-2 border-1 border-new-pink hover:bg-new-pink hover:text-white"
          >
            <a href="#contato">Contato</a>
          </li>
          <li
            class="bg-white rounded-2xl p-2 border-1 border-new-pink hover:bg-new-pink hover:text-white"
          >
            <a href="/order">Pedido</a>
          </li>
        </ul>
      </details>
    </div>
  </nav>
  <section
    class="flex flex-col gap-[6vh] md:justify-between xl:grid xl:grid-cols-2 xl:grid-rows-2 xl:gap-0"
  >
    <h1
      class="text-8xl text-new-pink font-bold text-center
              lg:text-9xl xl:text-8xl xl:col-start-1 xl:col-end-2
              xl:row-start-1 xl:row-end-2 xl:self-center 2xl:text-[110px]
              2xl:text-nowrap 2xl:pl-20"
    >
      Lorem <br class="md:hidden" />ipsum
    </h1>
    <div
      class="order-2 md:order-0 self-center -translate-y-12 md:flex md:flex-col md:gap-8 md:translate-y-6 lg:gap-10
            xl:col-start-1 xl:col-end-2 xl:row-start-2 xl:row-end-3 xl:self-start xl:justify-self-center xl:translate-y-0 xl:pr-36"
    >
      <h2
        class="text-2xl text-new-pink font-comfortaa font-semibold max-w-[370px] text-center
        md:text-white lg:text-3xl lg:max-w-[420px] xl:text-left"
      >
        Lorem ipsum dolor sit amet, consectetur adipiscing elit
      </h2>
      <div class="hidden md:block md:text-center xl:text-left">
        <a
          href="#produtos"
          class="font-bold font-nunito bg-new-pink text-[#ffffff] border-2 border-white p-4 rounded-3xl shadow-sm shake-anchor hover:bg-pink-400 hover:scale-102"
          >Veja mais</a
        >
      </div>
    </div>
    <div
      class="order-1 self-center w-100 h-100 md:order-0 md:ml-0 md:-translate-x-2
            xl:col-start-2 xl:col-end-3 xl:row-start-1 xl:row-end-3 xl:justify-self-center xl:w-130 xl:h-130"
    >
      <Image
        src={heroImage}
        alt="doces"
        class="imagem-flutuante object-contain rounded-3xl"
        format="avif"
      />
    </div>
  </section>
</header>

<style>
  summary::-webkit-details-marker {
    display: none;
  }

  summary {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .imagem-flutuante {
    animation: flutuar 3s ease-in-out infinite;
  }

  @keyframes flutuar {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
    100% {
      transform: translateY(0);
    }
  }

  .shake-anchor {
    display: inline-block;
    transform-origin: bottom center;
    animation: periodicShake 6s ease-in-out infinite;
  }

  @media (min-width: 768px) {
    .shake-nav {
      transform-origin: bottom center;
      animation: navShake 8s ease-in-out infinite;
    }
  }

  @keyframes periodicShake {
    0%,
    75%,
    100% {
      transform: rotate(0deg);
    }
    88% {
      transform: rotate(12deg);
    }
    85% {
      transform: rotate(-12deg);
    }
    90% {
      transform: rotate(12deg);
    }
    95% {
      transform: rotate(-12deg);
    }
  }

  @keyframes navShake {
    0%,
    75%,
    100% {
      transform: translateX(0);
    }
    88% {
      transform: translateX(-10px);
    }
    85% {
      transform: translateX(10px);
    }
    90% {
      transform: translateX(-10px);
    }
    95% {
      transform: translateX(10px);
    }
  }
</style>
