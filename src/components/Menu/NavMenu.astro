<nav
  class="self-center flex justify-between items-center bg-cotton-candy p-2 pr-6 pl-6 rounded-2xl shadow-sm w-full max-w-[300px] fixed md:self-end md:max-w-[200px] md:mr-6 xl:max-w-[300px]"
>
  <div>
    <a
      href="/"
      class="bg-[#ffebf2] border border-[#ffdae9] text-[#d94694] rounded-2xl rotate-180 hover:scale-110 inline-block"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 m-2 inline-block"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
          clip-rule="evenodd"></path>
      </svg>
    </a>
  </div>
  <div class="relative">
    <details class="relative">
      <summary class="cursor-pointer [custom-summary]">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          class="hover:stroke-[#e60073] hover:scale-110 transition-all duration-300 ease-in-out"
        >
          <path d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </summary>
      <section
        class="absolute -right-4 mt-6 w-70 bg-cotton-candy p-4 shadow-lg rounded-lg"
      >
        <h3 class="mb-4 text-xl font-semibold text-[#800040]">
          Carrinho de Compras
        </h3>
        <ul
          class="flex flex-col space-y-2 max-h-[230px] overflow-y-auto"
          style="scrollbar-color: #e60073 transparent; scrollbar-width: thin;"
        >
          <!-- Os itens podem ser gerados dinamicamente -->
        </ul>
        <div class="mt-4 flex justify-between font-bold">
          <span>Total:</span>
          <span id="valor-final">R$ 00,00</span>
        </div>
        <div class="flex gap-2">
          <button
            class="mt-4 w-2/3 bg-emerald-500 text-white font-semibold py-2 rounded hover:bg-emerald-400 transition-colors duration-300"
          >
            Finalizar Compra
          </button>
          <button
            id="clear-cart"
            class="mt-4 w-1/3 bg-white text-white py-2 rounded hover:bg-red-200 transition-colors duration-300 flex items-center justify-center"
          >
            <img
              src="src/assets/menu-icons/delete-trash-svgrepo-com.svg"
              alt="trash can"
              class="w-10 h-10"
            />
          </button>
        </div>
      </section>
    </details>
  </div>
</nav>

<style>
  summary::-webkit-details-marker {
    display: none;
  }

  summary {
    list-style: none;
    padding: 0;
    margin: 0;
  }
</style>

<script>
  import { cart, calcularTotal, carregarCarrinho } from "../../lib/store.js";

  function updateTotal() {
    let total = calcularTotal();

    const valorFinal = document.querySelector("#valor-final");

    valorFinal.textContent = `R$ ${total}`;
  }

  function updateCart() {
    const shopCart = document.querySelector("ul");

    shopCart.replaceChildren();

    cart.map((item) => {
      const newItem = document.createElement("li");
      newItem.textContent = `${item["titulo"]} - R$ ${item["preco"]} 
      - Qnt: ${item["quantidade"]}`;
      newItem.classList.add("p-2", "bg-white", "rounded", "shadow", "mr-2");
      shopCart?.append(newItem);
    });
  }

  // Exemplo: carregar o carrinho quando a página for carregada
  document.addEventListener("DOMContentLoaded", () => {
    carregarCarrinho();
    updateCart(); // Função que atualiza a interface do carrinho
    updateTotal();
  });

  document.addEventListener("cartChange", () => {
    updateCart();

    updateTotal();
  });
</script>
