      <div class="m-auto">
        <Image
          src={mary03}
          alt="ok"
          class="m-auto object-cover object-center w-80 h-80 rounded-2xl border-1 sm:w-100 sm:h-100"
          format="avif"
        />
      </div>
      <p
        class="self-center text-center text-[#333333] font-semibold max-w-100 sm:max-w-120
      lg:text-left lg:text-3xl lg:leading-10 lg:max-w-120 lg:order-1"
      >
