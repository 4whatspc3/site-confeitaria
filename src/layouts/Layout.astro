---
import "../styles/global.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Bem-vindo ao Doces e Duçuras, o espaço perfeito para os apaixonados por confeitaria! Descubra receitas irresistíveis, dicas e inspirações para transformar cada doce em momentos inesquecíveis."
    />
    <meta name="author" content="Doces e Doçuras" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/kawaii-promo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }
</style>
